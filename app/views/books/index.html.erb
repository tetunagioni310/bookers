<p></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %><td>
      <td>
        <a href="/books/<%= book.id %>">Show</a>
      </td>
      <td>
        <a href="/books/<%= book.id %>/edit">
          Edit
        </a>
      </td>
      <td>
        <a href="/books/<%= book.id %>" data-method="delete"  data-confirm="本当に削除しますか？">
          Destroy
        </a>
      </td>
    </tr>
     <% end %>
  </tbody>
  </table>


<h2>New book</h2>

<% if @book.errors.any? %>
 <%= pluralize(@book.errors.count, "error") %>
 <ul>
   <% @book.errors.full_messages.each do |messages| %>
   <li><%= messages %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book,url: books_path,method: :post do |f| %>

<div class="field">
<%= f.label :title %>
<%= f.text_field :title %>
</div>

<div class="field">
<%= f.label :boby %>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit "Create Book"%>
</div>
<% end %>